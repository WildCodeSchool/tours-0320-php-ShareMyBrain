{% extends 'layout.html.twig' %}

{% block content %}
    <div class="show" id="header">
        <div class="card border-success mb-2">
            <h1 class="card-header text-center" >Thème : {{ theme.name }}</h1>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Question(s)</th>
                    <th scope="col">Posée(s) par</th>
                    <th scope="col">Date</th>
                </tr>
                <tbody>
                <h5 class="card-title">{% for question in questions %}</h5>
                <tr>
                    <th scope="row">-</th>
                    <td>{{question.content}}</td>
                    <td>{{question.username}}</td>
                    <td>{{question.date|date("d/m/Y") }}</td>
                    <td><a href="/answer/show/{{ question.id }}" class="btn btn-success">Voir les réponses</a></td>
                </tr>
                {% else %}
                    <p>Nothing to display</p>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="/theme/index" class="btn btn-success">Revenir aux thèmes</a>
        <a href="/question/add" class="btn btn-success">Poser une question</a>
        <a href="#header">Remonter en haut de la page</a>
    </div>
{% endblock %}